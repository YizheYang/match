<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <Button
        android:id="@+id/btn_matchAc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="匹配"
        app:layout_constraintBottom_toTopOf="@+id/btn_viewList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_addList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加列表"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_viewList" />

    <Button
        android:id="@+id/btn_viewList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看列表"
        app:layout_constraintBottom_toTopOf="@+id/btn_addList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_matchAc" />

</androidx.constraintlayout.widget.ConstraintLayout>